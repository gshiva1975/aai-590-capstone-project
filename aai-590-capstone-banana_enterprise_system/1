apiVersion: apps/v1
kind: Deployment
metadata:
  name: banana-api
spec:
  replicas: 1
  selector:
    matchLabels:
      app: banana-api
  template:
    metadata:
      labels:
        app: banana-api
    spec:
      containers:
        - name: banana-api
          image: banana-api:v2
          imagePullPolicy: Never
          ports:
            - containerPort: 8000
          resources:
            limits:
              memory: "2Gi"
              cpu: "500m"
            requests:
              memory: "512Mi"
              cpu: "250m"
          env:
            - name: MCP_MARKET_URL
              value: "http://banana-market:8003/mcp"
            - name: MCP_SEC_URL
              value: "http://banana-sec:8004/mcp"
            - name: MCP_SOCIAL_URL
              value: "http://banana-social:8003/mcp"
